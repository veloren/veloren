name: windows-voxygen build

on:
  push:
    branches:
      - cmd-develop  # 更改为你的默认分支
  workflow_dispatch:  # 手动触发

jobs:
  build:
    runs-on: windows-latest  # 使用 Windows 运行环境

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Rust with GNU toolchain
        uses: actions/setup-rust@v1
        with:
          rust-version: stable
          toolchain: stable-x86_64-pc-windows-gnu  # 使用 GNU 工具链

      - name: Build project
        run: cargo build --release --bin veloren-voxygen

      - name: Upload artifact
        uses: actions/upload-artifact@v2
        with:
          name: voxygen-windows
          path: target/release/veloren-voxygen.exe
